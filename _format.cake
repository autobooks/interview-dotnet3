var target = Argument("target", "Csharpier");

//////////////////////////////////////////////////////////////////////
// TASKS
//////////////////////////////////////////////////////////////////////

Task("Format")
    .Does(() => 
    {
        DotNetCoreTool("format");
    });
Task("Csharpier")
    .IsDependentOn("Format")
    .Does(() => 
    {
        DotNetCoreTool("csharpier");
    });


//////////////////////////////////////////////////////////////////////
// EXECUTION
//////////////////////////////////////////////////////////////////////

RunTarget(target);